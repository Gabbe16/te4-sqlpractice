        {% for cat in cats %}
        <a href="/dbtest/{{cat.id}}"><li>{{ cat.name }}, {{ cat.age }}, {{ cat.breed }} Cat</li></a>
        {% endfor %}
    </ul>
    <a href="/cat/new">Add your cat</a>
</main>
{% endblock %}