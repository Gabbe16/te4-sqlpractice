{% extends "layout.njk" %}

{% block content %}
<main class="wrapper">
    <form action="/dbtestPOST" method="post">
        <div class="form-element">
            <label for="name">Namn:</label>
            <input type="text" name="name" id="name">
        </div>
        <div class="form-element">
            <label for="age">Ålder:</label>
            <input type="number" name="age" id="age">
        </div>
        <div class="form-element">
            <label for="breed">Ras:</label>
            <select name="breed" id="breed_id">
                {% for breed in breeds %}
                <option value="{{ breed.id }}">{{ breed.name }}</option>
                {% endfor %}
            </select>
        </div>
        <input type="submit" value="Lägg till katt">
        </div>
    </form>
</main>
{% endblock %}